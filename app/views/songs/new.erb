<h1>Create a New Song</h1>

<form action="/songs" method="post">
  <label for="song_name">Name</label><br>
  <input type="text" id="song_name" name="song[name]"><br><br>
  <label for="artist">Artist Name</label><br>
  <input type="text" id="artist" name="artist[name]"><br><br>
  <label>Genres</label><br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">"<%= genre.name %>"</input><br>
  <% end %><br><br>

  <input type="submit" value="Create Song">
</form>
